<head>
<script>
            function backround() {
                switch(op) {
                    case 1:
                        document.body.style.transition = "800ms";
                        document.body.style.background = 'green';
                        break;
                    case 2:
                        document.body.style.transition = "800ms";
                        document.body.style.background = 'red';
                        break;
                    case 3:
                        document.body.style.transition = "800ms";
                        document.body.style.background = 'black';
                        break;
                    case 4:
                        document.body.style.transition = "800ms";
                        document.body.style.background = 'blue';
                        break;
                    default:
                        alert("Ээээээ");
                        break;
                }
            } 
</head>

<body>
        <div class="class1">
            <hr id="hr2">
            <button onclick="op=1;backround()" id="green">Green</button>
            <button onclick="op=2;backround()"id="red">Red</button>
            <br>
            <button onclick="op=3;backround()"id="black">Black</button>
            <button onclick="op=4;backround()" id="blue">Blue</button>
            <hr id="hr">
        </div>
 </body>
 
